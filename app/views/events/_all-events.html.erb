
<div class="column">
    <article class="media box column">
      <div class="media-content">
        <%= render 'events/form' %>
      </div>
    </article>
  <% @events.each do | post | %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <strong><%= event.user.name %></strong><br/>
            <p><%= event.event %></p>
          </div>
        </div>
      </article>
    </div>
  <% end %>
</div>