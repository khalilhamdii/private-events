<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Create Event", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Create a new article...", autofocus: true %>
      <%= f.input :description, placeholder: "description" %>
      <%= f.input :date, wrapper: false %>    
    </div>
  </div>
  <%= f.button :submit, class: "button is-primary" %>
<% end %>