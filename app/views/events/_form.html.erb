<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :event_id, label: "Create Event", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Create a new article...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-primary" %>
<% end %>